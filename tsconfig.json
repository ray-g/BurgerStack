{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "es2015", "dom"],
    "noLib": false,
    "compileOnSave": false,
    "declaration": false,
    "removeComments": true,
    "newLine": "LF",
    "sourceMap": true,
    "pretty": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules",
      "./tools/manual_typings"
    ],
    "types": [
      "express",
      "mocha",
      "node",
      "protractor",
      "systemjs"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
